<UserControl x:Class="DesktopApp.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopApp.Pages"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" MinWidth="630" MinHeight="430">
    
    <UserControl.Background>
        <LinearGradientBrush>
            <GradientStop Color="#9708CC" Offset="0.0" />
            <GradientStop Color="#43CBFF" Offset="0.50" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        
        <materialDesign:Card  
                             Margin="30" 
                             materialDesign:UniformCornerRadius="20"
                             materialDesign:ElevationAssist.Elevation="Dp16"
                             MaxWidth="600" MaxHeight="300" MinHeight="200" MinWidth="400">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock x:Name="WelcomeText" FontSize="24" HorizontalAlignment="Center" Foreground="Azure"/>
            </StackPanel>
            
        </materialDesign:Card>
    </Grid>
</UserControl>